{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/scripts",
    "rootDir": "./scripts",
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src",
    "**/*.js",
    "**/*.jsx",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
