<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fisqos - Ana Sayfa</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-color: #2d2d2d;
      color: #fff;
    }
    
    .container {
      display: flex;
      height: 100vh;
    }
    
    .sidebar {
      width: 250px;
      background-color: #1e1e1e;
      padding: 20px 0;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
    }
    
    .sidebar-header {
      padding: 0 20px 20px 20px;
      border-bottom: 1px solid #444;
    }
    
    .sidebar-title {
      color: #c61884;
      margin: 0;
      font-size: 24px;
    }
    
    .sidebar-menu {
      list-style: none;
      padding: 0;
      margin: 20px 0;
    }
    
    .sidebar-menu li {
      padding: 10px 20px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    
    .sidebar-menu li:hover {
      background-color: #333;
    }
    
    .sidebar-menu li.active {
      background-color: #c61884;
    }
    
    .main-content {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }
    
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      padding-bottom: 20px;
      border-bottom: 1px solid #444;
    }
    
    .page-title {
      margin: 0;
      font-size: 28px;
    }
    
    .user-info {
      display: flex;
      align-items: center;
    }
    
    .user-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: #c61884;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-right: 10px;
      font-weight: bold;
    }
    
    .user-name {
      font-weight: bold;
    }
    
    .logout-button {
      margin-left: 15px;
      padding: 8px 12px;
      background-color: #444;
      border: none;
      border-radius: 4px;
      color: white;
      cursor: pointer;
    }
    
    .logout-button:hover {
      background-color: #555;
    }
    
    .content-cards {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    
    .card {
      background-color: #333;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
    
    .card-title {
      margin-top: 0;
      color: #c61884;
      font-size: 18px;
      margin-bottom: 15px;
    }
    
    .card-content {
      color: #ddd;
    }
    
    .login-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    
    .login-box {
      background-color: #333;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      width: 350px;
      text-align: center;
    }
    
    .login-title {
      margin-bottom: 20px;
      color: #c61884;
    }
    
    .input-field {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border: 1px solid #555;
      border-radius: 4px;
      background-color: #444;
      color: #fff;
      box-sizing: border-box;
    }
    
    .login-button {
      width: 100%;
      padding: 12px;
      margin-top: 20px;
      background-color: #c61884;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }
    
    .login-button:hover {
      background-color: #a3156f;
    }
    
    .register-link {
      margin-top: 20px;
      font-size: 14px;
    }
    
    .register-link a {
      color: #c61884;
      text-decoration: none;
    }
    
    .register-link a:hover {
      text-decoration: underline;
    }
    
    .error-message {
      color: #ff5555;
      margin-top: 10px;
      display: none;
    }
  </style>
</head>
<body>
  <!-- Giriş Ekranı -->
  <div id="login-screen" class="login-container">
    <div class="login-box">
      <h2 class="login-title">Oturum Aç</h2>
      
      <div id="error-message" class="error-message">
        Kullanıcı adı veya şifre hatalı!
      </div>
      
      <form id="login-form">
        <input type="text" id="username" class="input-field" placeholder="Kullanıcı Adı" required>
        <input type="password" id="password" class="input-field" placeholder="Şifre" required>
        <button type="submit" class="login-button">Giriş Yap</button>
      </form>
      
      <div class="register-link">
        Hesabınız yok mu? <a href="#" id="show-register">Kayıt Ol</a>
      </div>
    </div>
  </div>
  
  <!-- Kayıt Ekranı -->
  <div id="register-screen" class="login-container" style="display: none;">
    <div class="login-box">
      <h2 class="login-title">Kayıt Ol</h2>
      
      <div id="register-error-message" class="error-message">
        Kayıt sırasında bir hata oluştu!
      </div>
      
      <form id="register-form">
        <input type="text" id="reg-username" class="input-field" placeholder="Kullanıcı Adı" required>
        <input type="email" id="reg-email" class="input-field" placeholder="E-posta" required>
        <input type="password" id="reg-password" class="input-field" placeholder="Şifre" required>
        <input type="password" id="reg-confirm-password" class="input-field" placeholder="Şifreyi Tekrarla" required>
        <button type="submit" class="login-button">Kayıt Ol</button>
      </form>
      
      <div class="register-link">
        Zaten hesabınız var mı? <a href="#" id="show-login">Giriş Yap</a>
      </div>
    </div>
  </div>
  
  <!-- Ana Ekran -->
  <div id="main-screen" class="container" style="display: none;">
    <div class="sidebar">
      <div class="sidebar-header">
        <h2 class="sidebar-title">Fisqos</h2>
      </div>
      <ul class="sidebar-menu">
        <li class="active">Ana Sayfa</li>
        <li>Gruplar</li>
        <li>Kanallar</li>
        <li>Mesajlar</li>
        <li>Ayarlar</li>
      </ul>
    </div>
    
    <div class="main-content">
      <div class="header">
        <h1 class="page-title">Ana Sayfa</h1>
        <div class="user-info">
          <div class="user-avatar">K</div>
          <span class="user-name">Kullanıcı</span>
          <button class="logout-button" id="logout-button">Çıkış</button>
        </div>
      </div>
      
      <div class="content-cards">
        <div class="card">
          <h3 class="card-title">Hoş Geldiniz</h3>
          <div class="card-content">
            <p>Fisqos uygulamasına hoş geldiniz. Bu uygulama ile arkadaşlarınızla sesli ve yazılı olarak iletişim kurabilirsiniz.</p>
          </div>
        </div>
        
        <div class="card">
          <h3 class="card-title">Gruplar</h3>
          <div class="card-content">
            <p>Gruplar oluşturarak arkadaşlarınızla birlikte sohbet edebilirsiniz. Gruplara kanallar ekleyerek farklı konularda sohbet edebilirsiniz.</p>
          </div>
        </div>
        
        <div class="card">
          <h3 class="card-title">Kanallar</h3>
          <div class="card-content">
            <p>Kanallar, gruplar içinde yer alan sohbet alanlarıdır. Metin kanalları ve ses kanalları olmak üzere iki tür kanal bulunmaktadır.</p>
          </div>
        </div>
        
        <div class="card">
          <h3 class="card-title">Mesajlar</h3>
          <div class="card-content">
            <p>Arkadaşlarınızla özel mesajlar gönderebilir, dosya paylaşabilir ve sesli görüşme yapabilirsiniz.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Sayfa yüklendi');
      
      // Ekranlar
      const loginScreen = document.getElementById('login-screen');
      const registerScreen = document.getElementById('register-screen');
      const mainScreen = document.getElementById('main-screen');
      
      // Formlar
      const loginForm = document.getElementById('login-form');
      const registerForm = document.getElementById('register-form');
      
      // Hata mesajları
      const errorMessage = document.getElementById('error-message');
      const registerErrorMessage = document.getElementById('register-error-message');
      
      // Ekran geçişleri
      const showRegister = document.getElementById('show-register');
      const showLogin = document.getElementById('show-login');
      
      // Çıkış butonu
      const logoutButton = document.getElementById('logout-button');
      
      // Giriş formunu dinle
      loginForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;
        
        console.log('Giriş denemesi:', username, password);
        
        // Basit doğrulama
        if (username === 'admin' && password === 'admin') {
          console.log('Giriş başarılı');
          
          // Kullanıcı bilgilerini güncelle
          document.querySelector('.user-avatar').textContent = username.charAt(0).toUpperCase();
          document.querySelector('.user-name').textContent = username;
          
          // Ana ekranı göster
          loginScreen.style.display = 'none';
          mainScreen.style.display = 'flex';
        } else {
          console.log('Giriş başarısız');
          errorMessage.style.display = 'block';
        }
      });
      
      // Kayıt formunu dinle
      registerForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const username = document.getElementById('reg-username').value;
        const email = document.getElementById('reg-email').value;
        const password = document.getElementById('reg-password').value;
        const confirmPassword = document.getElementById('reg-confirm-password').value;
        
        console.log('Kayıt denemesi:', username, email);
        
        // Şifre kontrolü
        if (password !== confirmPassword) {
          registerErrorMessage.textContent = 'Şifreler eşleşmiyor!';
          registerErrorMessage.style.display = 'block';
          return;
        }
        
        // Kayıt başarılı
        console.log('Kayıt başarılı');
        
        // Giriş ekranına dön
        registerScreen.style.display = 'none';
        loginScreen.style.display = 'flex';
      });
      
      // Kayıt ekranını göster
      showRegister.addEventListener('click', function() {
        loginScreen.style.display = 'none';
        registerScreen.style.display = 'flex';
      });
      
      // Giriş ekranını göster
      showLogin.addEventListener('click', function() {
        registerScreen.style.display = 'none';
        loginScreen.style.display = 'flex';
      });
      
      // Çıkış yap
      logoutButton.addEventListener('click', function() {
        console.log('Çıkış yapılıyor...');
        
        // Ana ekranı gizle, giriş ekranını göster
        mainScreen.style.display = 'none';
        loginScreen.style.display = 'flex';
        
        // Formları temizle
        loginForm.reset();
        registerForm.reset();
        
        // Hata mesajlarını gizle
        errorMessage.style.display = 'none';
        registerErrorMessage.style.display = 'none';
      });
      
      // Menü öğelerine tıklama olayı
      const menuItems = document.querySelectorAll('.sidebar-menu li');
      menuItems.forEach(item => {
        item.addEventListener('click', function() {
          // Aktif sınıfını kaldır
          menuItems.forEach(i => i.classList.remove('active'));
          // Tıklanan öğeye aktif sınıfını ekle
          this.classList.add('active');
          
          // Sayfa başlığını güncelle
          document.querySelector('.page-title').textContent = this.textContent;
          
          console.log('Menü öğesi seçildi:', this.textContent);
        });
      });
    });
  </script>
</body>
</html>
