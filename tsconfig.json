{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "rootDir": "./",

    // Tip kontrolü ayarları
    "strict": false, // Kademeli olarak true yapılacak
    "noImplicitAny": false, // any tipinin açıkça belirtilmesini zorunlu kılma (geçiş sürecinde)
    "strictNullChecks": false, // null ve undefined kontrolü - Kademeli olarak true yapılacak
    "strictFunctionTypes": true, // Fonksiyon parametrelerinin tiplerini daha sıkı kontrol et
    "strictBindCallApply": true, // bind, call ve apply metodlarının tiplerini kontrol et
    "strictPropertyInitialization": false, // Kademeli olarak true yapılacak
    "noImplicitThis": true, // this anahtar kelimesinin tipinin açıkça belirtilmesini zorunlu kıl
    "alwaysStrict": true, // JavaScript'in strict mode'da çalışmasını sağla

    // Kademeli geçiş için esnek ek kontroller
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,

    // Modül ve import ayarları
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",

    // Derleme ayarları
    "declaration": false,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",

    // Yollar
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@models/*": ["src/models/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@middleware/*": ["src/middleware/*"],
      "@routes/*": ["src/routes/*"],
      "@socket/*": ["src/socket/*"],
      "@types/*": ["src/types/*"]
    },

    // Dekoratör desteği
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // JavaScript desteği - kademeli geçiş için
    "allowJs": true, // JavaScript dosyalarını da derle
    "checkJs": false,
    "noEmit": false,
    "skipDefaultLibCheck": true,
    "emitDeclarationOnly": false,
    "isolatedModules": false,
    "noEmitOnError": false
  },
  "include": ["src/**/*.ts", "src/**/*.js", "scripts/**/*.ts", "*.ts"],
  "exclude": ["node_modules", "dist", "uploads", "**/*.jsx", "**/*.spec.ts", "**/*.test.ts", "src/modules/*-disabled/**/*"]
}
