{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "rootDir": "./",

    // Tip kontrolü ayarları - tamamen kapatıldı
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,

    // Ek kontroller - tamamen kapatıldı
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,

    // Modül ve import ayarları
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",

    // Derleme ayarları
    "declaration": false,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",
    "noEmitOnError": false,

    // Yollar
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@models/*": ["src/models/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@middleware/*": ["src/middleware/*"],
      "@routes/*": ["src/routes/*"],
      "@socket/*": ["src/socket/*"],
      "@types/*": ["src/types/*"]
    },

    // Dekoratör desteği
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // JavaScript desteği - kademeli geçiş için
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "skipDefaultLibCheck": true,
    "emitDeclarationOnly": false,
    "isolatedModules": false,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*.ts", "src/**/*.js", "scripts/**/*.ts", "*.ts", "public/js/**/*.ts"],
  "exclude": ["node_modules", "dist", "uploads", "**/*.jsx", "**/*.spec.ts", "**/*.test.ts", "src/modules/*-disabled/**/*"]
}
